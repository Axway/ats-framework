<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>ossrh</id>
            <username>${env.CI_DEPLOY_USERNAME}</username>
            <password>${env.CI_DEPLOY_PASSWORD}</password>
        </server>
        <server>
			<id>maven.oracle.com</id>
			<username>group.ats.team@axway.com</username>
			<password>${env.MAVEN_ORACLE_PASSWD}</password>
			<configuration>
			    <basicAuthScope>
			        <host>ANY</host>
			        <port>ANY</port>
			        <realm>OAM 11g</realm>
			    </basicAuthScope>
			    <httpConfiguration>
			        <all>
			            <params>
			                <property>
			                    <name>http.protocol.allow-circular-redirects </name>
			                    <value>%b,true</value>
			                </property>
			            </params>
			        </all>
			    </httpConfiguration>
			</configuration>
	    </server>  
    </servers>
    
    <profiles>
		<profile>
			<id>oss</id>
			
			<repositories>
				
				<repository>
					<id>ossrh</id>
					<url>https://oss.sonatype.org/</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
				
				<repository>
					<id>maven.org</id>
					<url>http://repo1.maven.org/maven/</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				
				<repository>
					<id>maven.oracle.com</id>
					<url>http://maven.oracle.com/</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				
			</repositories>
			
			<pluginRepositories>
				
				<pluginRepository>
					<id>ossrh</id>
					<url>https://oss.sonatype.org/</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</pluginRepository>
				
				<pluginRepository>
					<id>maven.org</id>
					<url>http://repo1.maven.org/maven/</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</pluginRepository>
				
				<pluginRepository>
					<id>maven.oracle.com</id>
					<url>http://maven.oracle.com/</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</pluginRepository>
				
			</pluginRepositories>
		</profile>
	</profiles>
		
	<activeProfiles>
		<activeProfile>oss</activeProfile>
	</activeProfiles>
    
</settings>
